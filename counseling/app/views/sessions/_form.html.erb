<%= bootstrap_form_with(model: [@counselor, @session]) do |f| %>
    <form class="row g-3">
        <div class="col-md-6">
            <%= f.text_field :title, label: "Title" %>
                <%= f.date_field :session_date, label: "Date" %>
                    <%= f.text_area :session_note, label: "Notes" %>
                        <%= f.primary @session.persisted?? "Update Session" : "Create Session" %>
        </div>
    </form>
<% end %>